<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="15dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_comment_portrait"
        android:src="@mipmap/ic_launcher"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_comment_username"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="username"
        app:layout_constraintBottom_toBottomOf="@+id/iv_comment_portrait"
        app:layout_constraintStart_toEndOf="@+id/iv_comment_portrait"
        app:layout_constraintTop_toTopOf="@+id/iv_comment_portrait" />

    <TextView
        android:id="@+id/tv_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="comment conent"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@+id/tv_comment_username"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment_username" />

    <TextView
        android:id="@+id/tv_comment_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="comment date"
        app:layout_constraintStart_toStartOf="@+id/tv_comment_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_comment_content" />
</androidx.constraintlayout.widget.ConstraintLayout>